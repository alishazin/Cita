<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign up</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Raleway:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/auth/signup.css">
</head>
<body class="user-flex-center">
    <div class="container user-flex-center">
        <main>
            <div class="left-side">
                <h2 class="align-self-start pb-2">Cita.</h2>
                <img class="mt-4 banner" src="/images/auth/signup.avif">
                <p class="description mt-4 align-self-start"></p>
                <div class="separator"></div>
                <div class="social-container">
                    <a class="social" href="#"><i class="bi bi-twitter"></i></a>
                    <a class="social" href="#"><i class="bi bi-instagram"></i></a>
                </div>
            </div>
            <div class="right-side">
                <h2 class="align-self-start pb-4">Cita.</h2>
                <h1 class="align-self-start">Sign up</h1>
                <p class="description align-self-start">please enter your details.</p>
                <form class="mt-4" action="/auth/signup" method="post">
                    <label>First Name</label>
                    <input type="text" class="mt-1 mb-3" name="fname" id="fname" minlength="2" maxlength="20" required>
                    <label>Last Name</label>
                    <input type="text" class="mt-1 mb-3" name="lname" id="lname" minlength="2" maxlength="20" required>
                    <label>Email</label>
                    <input type="email" class="mt-1 mb-3" name="username" id="username" required>
                    <label>Password</label>
                    <input type="password" class="mt-1 mb-3" name="password" id="password" minlength="8" required>
                    <label>Confirm Password</label>
                    <input type="password" class="mt-1 mb-2" name="confirm_password" id="confirm_password" minlength="8" required>
                    <p class="error-msg"><%= errorMsg %></p>
                    <button>Sign up</button>
                    <a class="social-sign-up mt-3" href="/auth/signup/google/" role="button">
                        <img style="height: 25px; " src="/images/auth/google-logo.webp">
                        Sign up with Google
                    </a>
                    <p class="log-in-help mt-3">Don't have an account? <a href="#">Log in</a></p>
                </form>
            </div>
        </main>
    </div>
    <script>

        document.body.onload = () => {
            var i = 0;
            var element = document.querySelector("div.left-side p.description");
            const txt = 'Let us worry about your Appointments./Appointments made Simple, Faster and Powerful by Cita.';
            const speed = 50;

            function typingEffect() {
                if (i < txt.length) {
                    if (txt.charAt(i) === "/") {
                        element.innerHTML += "<br>";
                    } else {
                        element.innerHTML += txt.charAt(i);
                    }
                    i++;
                    setTimeout(typingEffect, speed);
                }
            }
    
            typingEffect();
        }

    </script>
</body>
</html>