                            <div class="opt-1 user-flex-center"><span>upcoming</span></div>
                            <div class="opt-2 user-flex-center"><span>recent</span></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="right-content"></div>
        </div>
    </section>
